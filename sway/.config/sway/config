assign [app_id="[T|t]elegram"] $ws4
assign [class="Lens"] $ws5
assign [class="Spotify"] $ws6

for_window [app_id="nmtui_modal"] floating enable
for_window [class="arduino-ide|processing-app-Base"] floating enable

